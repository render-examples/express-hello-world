label{
font-size: 0.5em;
font-weight: 500;
}
input{
    height: 2em;  
    width: 50%;
  padding: 12px 20px;
  background-color: #ffffff00;
  margin: 2% 0;
  box-sizing: border-box;
  border: none;
  border-radius: 0.5em;
  border-bottom: 2px solid rebeccapurple;

}
input:focus{
    height: 2.5em;  
    width: 70%;
  margin: 2% 0;
